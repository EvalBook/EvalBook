{% extends 'base-no-menu.html.twig' %}
{% trans_default_domain 'security' %}

{% block pageTitle %}
    {{ 'Reset password'|trans }}
{% endblock %}

{% block body %}

    <div class="modal-center">
        <div>
            <img id="logo-mini" src="{{ asset('assets/img/logos/logo_evalbook_mini.png') }}" alt="EvalBook logo mini" />
        </div>

        <div class="full-width flex column align-items-start">

            <h1>{{ 'Reset your password'|trans }}</h1>

            {{ form_start(requestForm) }}

            {{ form_label(requestForm.email, 'My e-mail'|trans) }}
            {{ form_widget(requestForm.email) }}

            <div>
                <p>
                    {{ 'Enter your email address and we we will send you a link to reset your password.'|trans }}
                </p>
            </div>

            <button class="button-ok">{{ 'Send password mail'|trans }}</button>
            {{ form_end(requestForm) }}
        </div>
    </div>

{% endblock %}