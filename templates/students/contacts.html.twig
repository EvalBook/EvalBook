{% extends 'base.html.twig' %}
{% trans_default_domain 'templates' %}

{% block pageTitle %} {{ 'Student contacts' | trans }} {% endblock %}
{% block title %} {{ 'Student contacts' | trans }} {% endblock %}

{% block titleBottom %}
    {% set placeholder = 'Search for contact'|trans %}
    {% include 'search.html.twig' %}
{% endblock %}

{% block body %}
    <table class="full-width">
        <thead>
        <tr>
            <th>{{ 'Name'|trans }}</th>
            <th>{{ 'First name'|trans }}</th>
            <th class="mobile-hidden-td">{{ 'Address'|trans }}</th>
            <th>{{ 'Phone'|trans }}</th>
            <th>{{ 'Email'|trans }}</th>
            <th>{{ 'Relation'|trans }}</th>
            <th class="text-center mobile-hidden-td">{{ 'Send report'|trans }}</th>

            {% if is_granted('ROLE_STUDENT_EDIT') %}
                <th scope="col" class="text-center mobile-hidden-td">{{ 'Edit' | trans }}</th>
            {% endif %}

            {% if is_granted('ROLE_STUDENT_DELETE') %}
                <th scope="col" class="text-center mobile-hidden-td">{{ 'Delete' | trans }}</th>
            {% endif %}
        </tr>
        </thead>
        <tbody>
        {% for relation in contactsRelations %}
            <tr data-id="{{ relation.contact.id }}" data-trigger="{{ path('student_edit', {'id': relation.contact.id}) }}">
                <td class="js-search-target">{{ relation.contact.lastName }}</td>
                <td class="js-search-target">{{ relation.contact.firstName }}</td>
                <td class="mobile-hidden-td js-search-target">{{ relation.contact.address }}</td>
                <td>{{ relation.contact.phone }}</td>
                <td>{{ relation.contact.email }}</td>
                <td>{{ relation.relation|trans }}</td>
                <td class="text-center mobile-hidden-td">{{ relation.sendSchoolReport is same as(true) ? 'Yes'|trans : 'No'|trans }}</td>

                {# Role student edit also handle contact addition / deletion / addintion #}
                {% if is_granted('ROLE_STUDENT_EDIT') %}
                    {% set params = (redirect is defined) ? {'id': relation.contact.id, 'redirect': redirect} : {'id': relation.contact.id} %}
                    <td class="text-center mobile-hidden-td">
                        <a href="{{ path('student_edit', params) }}" title="Edit contact">
                            <i class="fas fa-edit"></i>
                        </a>
                    </td>
                {% endif %}

                {% if is_granted('ROLE_STUDENT_DELETE') %}
                    <td class="text-center mobile-hidden-td">
                        <div data-target="student"
                             data-targetid="{{ relation.contact.id }}"
                             data-action="{{ path('student_delete', {'id': relation.contact.id}) }}"
                             data-class="fas fa-trash"
                             data-csrf="{{ csrf_token('contact_delete' ~ relation.contact.id) }}"
                        >
                        </div>
                    </td>
                {% endif %}

            </tr>
        {% else %}
            <tr>
                <td class="text-center" colspan="9">{{ 'No student contact found' | trans }}</td>
            </tr>
            <tr>
                <td class="text-center" colspan="9">{{ 'Ensure this student has related contacts' | trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}


{# Add button desktop / mobile #}
{% set params = {'role': 'ROLE_STUDENT_EDIT', 'route': 'student_add_contact', 'params': {'id': student.id}} %}
{% block functionnalities %} {% include 'add-button.html.twig' with params %} {% endblock %}
{% block functionnalitiesMobile %} {% include 'add-button.html.twig' with params %} {% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('modalDialogs') }}
    {{ encore_entry_script_tags('search') }}
{% endblock %}