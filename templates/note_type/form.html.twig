{% extends 'base.html.twig' %}
{% trans_default_domain 'templates' %}

{% block pageTitle %}{{ 'Add a note type'|trans }}{% endblock %}
{% block title %}{{ 'Add a note type'|trans }}{% endblock %}

{% block body %}
<div class="full-width flex column">
    <a class="go-back" href="{{ app.request.headers.get('referer') }}">
        <i class="fas fa-long-arrow-alt-left"></i>
    </a>

    <div class="form-content">
        {{ form_start(form) }}

        {# Note type name #}
        <div class="form-row">
            {{ form_label(form.name, 'Name'|trans) }}
            {{ form_widget(form.name) }}
            <span class="form-error">
                    {{ form_errors(form.name) }}
                </span>
        </div>

        {# Note type ponderation #}
        <div class="form-row">
            {{ form_label(form.ponderation, 'Ponderation'|trans) }}
            {{ form_widget(form.ponderation) }}
            <span class="form-error">
                    {{ form_errors(form.ponderation) }}
            </span>
        </div>


        {# Submit button #}
        {{ form_row(form.submit, {
            'label': 'Send'|trans,
            'attr': {'class': 'margin-15'},
        }) }}

        {{ form_end(form) }}
    </div>

</div>
{% endblock %}
