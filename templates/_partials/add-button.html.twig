{#
    * Provide a simple '+' button for your templates

    * Usage:

        1) Include this template in YOUR file providing route option
            {% set params = {'role': 'ROLE_STUDENT_CREATE', 'route': 'student_add'} %}
            {% include '_partials/add-button.html.twig' with params %}

            Where => 'role'  is the rôle the user must own to see the + button.
                  => 'route' is the route to apply in case of the user rôle match the provided role.

        2) Enjoy.
#}
{% if role is defined and route is defined %}
    {% if is_granted(role) %}
        <a href="{{ path(route, (params is defined ? params : {}) ) }}" title="Add">
            <i class="fas fa-plus"></i>
        </a>
    {% endif %}
{% endif %}