<!DOCTYPE html>
{% trans_default_domain 'templates' %}

<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/x-icon" href="{{ asset('build/favicon.ico') }}" />
    <script src="https://kit.fontawesome.com/af99847773.js" crossorigin="anonymous"></script>

    {{ encore_entry_link_tags('theme') }}
    {{ encore_entry_link_tags('dialogs') }}

    {% block head %} {% endblock %}

    <title>EvalBook - {% block pageTitle %} {% endblock %}</title>
</head>
<body>
    <!-- Fetching user configuration -->
    {% set config = interfaceConfiguration.load(app.user) %}

    <!-- Display potentials error / success messages -->
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="dialog dialog-{{ label }}">
                {{ message | trans }}
            </div>
        {% endfor %}
    {% endfor %}

    <div class="container">
        <header>
            <div class="heading">

                <!-- Header -->
                {% if config.showLogo %}
                    <div id="logo">
                        <img src="{{ asset('build/logo_evalbook.png') }}" alt="EvalBook logo">
                        <span>{{ 'Teachers evaluation tool'|trans }}</span>
                    </div>
                {% endif %}

                <div id="mobile-header">
                    <div id="mobile-add-functionality">
                        {% block functionnalitiesMobile %} {% endblock %}
                    </div>

                    <div id="mobile-menu-toggle">
                        <i class="fas fa-ellipsis-h"></i>
                    </div>
                </div>

                <!-- User top right links -->
                <div id="user-links">
                    <div class="menuTopIcon">
                        <a href="{{ path('user_profile') }}" title="User profile">
                            <i class="fas fa-user"></i>
                            <span>{{ app.user is defined ? (app.user.firstName ~ ' ' ~ app.user.lastName) : 'My profile'|trans }}</span>
                        </a>
                    </div>

                    <div class="menuTopIcon">
                        <a href="{{ path('user_settings') }}" title="User configuration">
                            <i class="fas fa-users-cog"></i>
                            <span>{{ 'Configuration'|trans }}</span>
                        </a>
                    </div>

                    <div class="menuTopIcon">
                        <a href="{{ path('app_logout') }}" title="Log out">
                            <i class="fas fa-sign-out-alt"></i>
                            <span>{{ 'Log out'|trans }}</span>
                        </a>
                    </div>
                </div>

            </div>

            <!-- Navigation desktop -->
            <nav>
                {% if is_granted('ROLE_CLASS_LIST_ALL') or ( app.user.classrooms is defined and app.user.classrooms|length > 0) %}
                    <a href="{{ path('classrooms') }}" title="Classes">
                        <div class="menuItem">
                            <i class="fas fa-clock"></i>
                            <span>{{ 'Classes'|trans }}</span>
                        </div>
                    </a>
                {% endif %}

                <a href="{{ path('students') }}" title="Students">
                    <div class="menuItem">
                        <i class="fas fa-user-graduate"></i>
                        <span>{{ 'Students'|trans }}</span>
                    </div>
                </a>

                <a href="{{ path('activities') }}" title="Activities">
                    <div class="menuItem">
                        <i class="fas fa-brain"></i>
                        <span>{{ 'Activities'|trans }}</span>
                    </div>
                </a>

                <a href="{{ path('note_book_select_classroom') }}" title="Notebook">
                    <div class="menuItem">
                        <i class="fas fa-book-open"></i>
                        <span>{{ 'Notebook'|trans }}</span>
                    </div>
                </a>

                {# Display implantation menu if Admin / ROLE_IMPLANTATION_LIST_ALL #}
                {% if is_granted('ROLE_IMPLANTATION_LIST_ALL') %}
                    <a href="{{ path('implantations') }}" title="Implantations">
                        <div class="menuItem">
                            <i class="fas fa-building"></i>
                            <span>{{ 'Implantations'|trans }}</span>
                        </div>
                    </a>
                {% endif %}

                {% if is_granted('ROLE_SCHOOL_LIST_ALL') %}
                    <a href="{{ path('schools') }}" title="Schools">
                        <div class="menuItem">
                            <i class="fas fa-school"></i>
                            <span>{{ 'Schools'|trans }}</span>
                        </div>
                    </a>
                {% endif %}

                {% if is_granted('ROLE_USER_LIST_ALL') %}
                    <a href="{{ path('users') }}" title="Users">
                        <div class="menuItem">
                            <i class="fas fa-users"></i>
                            <span>{{ 'Users'|trans }}</span>
                        </div>
                    </a>
                {% endif %}

            </nav>

            <!-- Navigation - Mobile top menu -->
            <div id="mobile-top-nav">
                <div id="mobile-menu-items">
                    <ul>
                        {% if is_granted('ROLE_USER_LIST_ALL') %}
                            <li><i class="fas fa-users"></i></li>
                        {% endif %}

                        {% if is_granted('ROLE_IMPLANTATION_LIST_ALL') %}
                            <li><i class="fas fa-building"></i></li>
                        {% endif %}

                        {% if is_granted('ROLE_SCHOOL_LIST_ALL') %}
                            <li><i class="fas fa-school"></i></li>
                        {% endif %}

                        <li><i class="fas fa-user"></i></li>
                        <li><i class="fas fa-users-cog"></i></li>
                        <li><i class="fas fa-sign-out-alt"></i></li>
                    </ul>
                    <ul>
                        {% if is_granted('ROLE_USER_LIST_ALL') %}
                            <li>
                                <a href="{{ path('users') }}" title="Users">{{ 'Users'|trans }}</a>
                            </li>
                        {% endif %}

                        {% if is_granted('ROLE_IMPLANTATION_LIST_ALL') %}
                            <li>
                                <a href="{{ path('implantations') }}" title="Implantations">{{ 'Implantations'|trans }}</a>
                            </li>
                        {% endif %}

                        {% if is_granted('ROLE_SCHOOL_LIST_ALL') %}
                            <li>
                                <a href="{{ path('schools') }}" title="Schools">{{ 'Schools'|trans }}</a>
                            </li>
                        {% endif %}

                        <li>
                            <a href="{{ path('user_profile') }}" title="Profile">{{ 'My profile'|trans }}</a>
                        </li>
                        <li>
                            <a href="{{ path('user_settings') }}" title="Profile">{{ 'Configuration'|trans }}</a>
                        </li>
                        <li>
                            <a href="{{ path('app_logout') }}" title="Log out">{{ 'Log out'|trans }}</a>
                        </li>
                    </ul>
                </div>
            </div>

            <!-- Content head title -->
            <div class="content-top">
                {% if config.showTitle %}
                    <h1>{% block title %} {% endblock %}</h1>
                {% endif %}

                <!-- Search box for example. -->
                {% block titleBottom %} {% endblock %}

                <!-- Add 'something' functionality -->
                <div id="add-functionality">
                    {% block functionnalities %} {% endblock %}
                </div>

            </div>
        </header>

        <!-- Application contents -->
        <section class="content">
            {% block body %}{% endblock %}
        </section>
    </div>



    <!-- Quick access on mobile bottom. -->
    <nav id="mobile-menu">
        {% if is_granted('ROLE_CLASS_LIST_ALL') or ( app.user.classrooms is defined and app.user.classrooms|length > 0) %}
            <a href="{{ path('classrooms') }}" title="Classes">
                <div class="menuItem">
                    <i class="fas fa-clock"></i>
                    <span>{{ 'Classes'|trans }}</span>
                </div>
            </a>
        {% endif %}

        {% if is_granted('ROLE_STUDENT_LIST_ALL') %}
            <a href="{{ path('students') }}" title="Students">
                <div class="menuItem">
                    <i class="fas fa-user-graduate"></i>
                    <span>{{ 'Students'|trans }}</span>
                </div>
            </a>
        {% endif %}

        <a href="{{ path('activities') }}" title="Activites">
            <div class="menuItem">
                <i class="fas fa-brain"></i>
                <span>{{ 'Activities'|trans }}</span>
            </div>
        </a>

        <a href="{{ path('note_book_select_classroom') }}" title="Classes">
            <div class="menuItem">
                <i class="fas fa-book-open"></i>
                <span>{{ 'Notebook'|trans }}</span>
            </div>
        </a>
    </nav>

    {# Desktop footer #}
    {% if config.showFooter %}
        <footer>
            <p>
                <i class="fab fa-github-alt"></i>
                <span>{{ 'Source code on'|trans }} </span><a href="https://github.com/EvalBook/EvalBook" title="Eval book github repository">Github</a>
            </p>
        </footer>
    {% endif %}



    {{ encore_entry_script_tags('controls') }}
    {% block javascripts %} {% endblock %}


</body>
</html>