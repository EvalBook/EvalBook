{% extends 'base.html.twig' %}
{% trans_default_domain 'templates' %}

{% block pageTitle %}{{ 'Add activity'|trans }}{% endblock %}
{% block title %}{{ 'Add activity'|trans }}{% endblock %}

{% block body %}
<div class="full-width flex column">
    {% include '_partials/go-back.html.twig' %}

    <div class="form-content">

        {{ form_start(form) }}

        <div class="form-row">
            {# Activity theme domain display name #}
            {{ form_label(form.displayName, 'Display name'|trans) }}
            {{ form_widget(form.displayName, {'attr': {
                'class': 'full-width',
            }}) }}
            <span class="form-error">
                {{ form_errors(form.displayName) }}
            </span>
        </div>

        <div class="form-row">
            {# Activity theme domain parent theme #}
            {{ form_label(form.activityTheme, 'Parent theme'|trans) }}
            {{ form_widget(form.activityTheme, {'attr': {
                'class': 'full-width',
            }}) }}
        </div>

        {# Submit button #}
        {{ form_row(form.submit, {
            'label': 'Send'|trans,
            'attr': {'class': 'margin-15'},
        }) }}

        {{ form_end(form) }}

    </div>
</div>
{% endblock %}
