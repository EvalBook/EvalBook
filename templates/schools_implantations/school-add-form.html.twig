{% extends 'base.html.twig' %}

{%  block title %}
    {{ 'schools-implantations.title.add-school' | trans({}, 'forms') }}
{%  endblock %}

{% block sidebar %}
    {% include '_partials/sidebar.html.twig' %}
{% endblock %}

{% block body %}
    {% if schoolForm is defined %}
        {{ form_start(schoolForm) }}
        {{ form_errors(schoolForm) }}

        <div class="row mt">
            <div class="col">
                {# The school name #}
                {{ form_label(schoolForm.name, 'schools-implantations.label.name-school') }}
                {{ form_widget(schoolForm.name, {
                    'attr' : {'class': 'form-control'}
                }) }}
            </div>
        </div>

        <div class="row mt p-1">
            <div class="col">
                {# Submit button #}
                {{ form_row(schoolForm.submit, {'label': 'common.send' ,
                    'attr': {'class': 'btn btn-primary'}
                }) }}
            </div>
        </div>

        {{ form_end(schoolForm) }}

    {% endif %}
{% endblock %}