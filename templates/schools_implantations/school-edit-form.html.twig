<div class="modal right fade in" id="modal-right-school-{{ id }}" tabindex="-1" role="dialog" aria-labelledby="modal-right">
    <div class="modal-dialog" role="document">
        <div class="modal-content">

            <div class="modal-header">
                <h3 class="float-left">{{ 'schools-implantations.title.edit-school' | trans({}, 'forms') }}</h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <div>
                    {{ form_start(form) }}
                    {{ form_errors(form) }}

                    <div class="row mt-3">
                        <div class="col">
                            {# The implantation name #}
                            {{ form_label(form.name, 'schools-implantations.label.name-school') }}
                            {{ form_widget(form.name, {
                                'attr' : {'class': 'form-control'}
                            }) }}
                        </div>
                    </div>

                    <div class="row mt-3 p-1">
                        <div class="col">
                            {# Submit button #}
                            {{ form_row(form.submit, {'label': 'common.send' ,
                                'attr': {'class': 'btn btn-primary'}
                            }) }}
                        </div>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>

        </div>
    </div>
</div>