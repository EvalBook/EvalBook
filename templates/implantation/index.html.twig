{% extends 'base.html.twig' %}
{% trans_default_domain 'templates' %}

{% block pageTitle %} {{ 'Implantations' | trans }} {% endblock %}
{% block title %}{{ 'Implantations' | trans }}{% endblock %}

{% block body %}
    <table class="full-width">
        <thead>
        <tr>
            <th scope="col">{{ 'Implantations' | trans }}</th>
            <th scope="col">{{ 'Address' | trans }}</th>
            <th scope="col" data-mobile="0">{{ 'Zip-code' | trans }}</th>
            <th scope="col">{{ 'Country' | trans }}</th>
            <th scope="col" class="text-center">{{ 'Classes'|trans }}</th>

            {% if is_granted('ROLE_IMPLANTATION_EDIT') %}
                <th scope="col" class="text-center" data-mobile="0">{{ 'Periods'|trans }}</th>
                <th scope="col" class="text-center" data-mobile="0">{{ 'Edit' | trans }}</th>
            {% endif %}

            {% if is_granted('ROLE_IMPLANTATION_DELETE') %}
                <th scope="col" class="text-center" data-mobile="0">{{ 'Delete' | trans }}</th>
            {% endif %}
        </tr>
        </thead>
        <tbody>
        {% for implantation in implantations %}
            <tr data-id="{{ implantation.id }}" data-trigger="{{ path('implantation_edit', {'id': implantation.id}) }}">
                <td>{{ implantation.name }}</td>
                <td>{{ implantation.address }}</td>
                <td data-mobile="0">{{ implantation.zipCode }}</td>
                <td>{{ implantation.country }}</td>

                {# Display implantation class count with a link if user has rights to see clesses. #}
                <td class="text-center">
                    {% if is_granted('ROLE_CLASS_LIST_ALL') %}
                        <a href="{{ path('implantation_view_classes', {'id': implantation.id} ) }}">
                            <i class="fas fa-eye"></i> ({{ implantation.classes|length }})
                        </a>
                    {% else %}
                        <span>{{ implantation.classes|length }}</span>
                    {% endif %}
                </td>

                {# Only those having the implantation edit rights. #}
                {% if is_granted('ROLE_IMPLANTATION_EDIT') %}

                    <!-- Implantation periods -->
                    <td class="text-center">
                        <a href="{{ path('implantation_period_list', {'id': implantation.id}) }}">
                            <i class="fas fa-stopwatch"></i>
                        </a>
                    </td>
                    <!-- Implantation edition -->
                    <td class="text-center" data-mobile="0">
                        <a href="{{ path('implantation_edit', {'id': implantation.id}) }}">
                            <i class="fas fa-edit"></i>
                        </a>
                    </td>
                {% endif %}

                {# Only those having implantation delete rights. #}
                {% if is_granted('ROLE_IMPLANTATION_DELETE') %}
                    <td class="text-center" data-mobile="0">
                        <div data-target="implantation"
                             data-targetid="{{ implantation.id }}"
                             data-action="{{ path('implantation_delete', {'id': implantation.id}) }}"
                             data-class="fas fa-trash"
                             data-csrf="{{ csrf_token('implantation_delete' ~ implantation.id) }}"
                        >
                        </div>
                    </td>
                {% endif %}

            </tr>
        {% else %}
            <tr>
                <td colspan="7" class="text-center">
                    {{ 'No implantation found' | trans }}
                </td>
            </tr>
            <tr>
                <td colspan="7" class="text-center">
                    {{ 'You do not have rights to view implantations or no impantation was created'|trans }}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}


{% block functionnalities %}
    {% if is_granted('ROLE_IMPLANTATION_CREATE') %}
        <a href="{{ path('implantation_add') }}">
            <i class="fas fa-plus"></i>
        </a>
    {% endif %}
{% endblock %}


{% block functionnalitiesMobile %}
    {% if is_granted('ROLE_IMPLANTATION_CREATE') %}
        <a href="{{ path('implantation_add') }}">
            <i class="fas fa-plus"></i>
        </a>
    {% endif %}
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('modalDialogs') }}
{% endblock %}