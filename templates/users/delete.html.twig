{% extends 'base.html.twig' %}

{% block title %}{{ 'Users' | trans }}{% endblock %}

{% block body %}

    {% include 'sidebar.html.twig' %}

    <div class="col-md-4 content">
        <table class="table">
            <thead>
            <tr>
                <th>{{ 'Id' | trans }}</th>
                <th>{{ 'First name' | trans }}</th>
                <th>{{ 'Last  name' | trans }}</th>
                <th>{{ 'E-mail' | trans }}</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.firstName }}</td>
                    <td>{{ user.lastName }}</td>
                    <td>{{ user.email }}</td>
                    <td>
                        {% include 'modal-confirm.html.twig' with {
                            'content' : 'Are you sure you want to delete this user' | trans,
                            'id': user.id,
                            'slug' : 'delete',
                            'button' : true,
                            'buttonLabel' : 'Delete' | trans,
                            'onConfirm' : path('users_delete_confirm',{id:user.id}),
                            'onCancel' :  path('users_delete')
                        }
                        %}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="8">{{ 'No users found' | trans }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

