{% extends 'base.html.twig' %}

{% block title %}{{ 'Users delete' | trans }}{% endblock %}

{% block sidebar %}
    {% include 'sidebar.html.twig' %}
{% endblock %}

{% block body %}
    <table class="table table-striped">
        <thead>
        <tr>
            <th scope="col">{{ 'Id' | trans }}</th>
            <th scope="col">{{ 'First name' | trans }}</th>
            <th scope="col">{{ 'Last  name' | trans }}</th>
            <th scope="col">{{ 'E-mail' | trans }}</th>
            <th scope="col"></th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <th scope="row">{{ user.id }}</th>
                <td>{{ user.firstName }}</td>
                <td>{{ user.lastName }}</td>
                <td>{{ user.email }}</td>
                <td>
                    {% include 'modal-confirm.html.twig' with {
                        'content' : 'Are you sure you want to delete this user' | trans,
                        'id': user.id,
                        'slug' : 'delete',
                        'fa' : 'far fa-trash-alt',
                        'onConfirm' : path('users_delete_confirm',{id:user.id}),
                        'onCancel' :  path('users_delete')
                    }
                    %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">{{ 'No users found' | trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

