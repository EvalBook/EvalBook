{% extends 'base.html.twig' %}
{% trans_default_domain 'templates' %}

{% block pageTitle %} {{ 'Users' | trans }} {% endblock %}
{% block title %}
    {{ 'Users' | trans }}
    {% set help = {'title': 'users.title', 'intro': 'intro', 'actions': 'users.actions'} %}
    {% include 'help/help-dialog.html.twig' %}
{% endblock %}

{% block body %}
    <table class="full-width">
        <thead>
        <tr>
            <th scope="col">{{ 'Name'|trans }}</th>
            <th scope="col">{{ 'First name'|trans }}</th>
            <th scope="col">{{ 'Mail address'|trans }}</th>
            <th scope="col" class="text-center">{{ 'Students'|trans }}</th>
            <th scope="col" class="text-center">{{ 'Classes' | trans }}</th>

            {% if is_granted('ROLE_USER_EDIT') %}
                <th scope="col" class="text-center" data-mobile="0">{{ 'Edit'|trans }}</th>
            {% endif %}

            {% if is_granted('ROLE_USER_DELETE') %}
                <th scope="col" class="text-center" data-mobile="0">{{ 'Delete'|trans }}</th>
            {% endif %}

        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr data-id="{{ user.id }}" data-trigger="{{ path('user_edit', {'id': user.id}) }}">
                <td>{{ user.firstName }}</td>
                <td>{{ user.lastName }}</td>
                <td>{{ user.email }}</td>

                <td class="text-center">
                    {% if is_granted('ROLE_STUDENT_LIST_ALL') %}
                        <a href="{{ path('user_view_students', {'id': user.id} ) }}">
                            <i class="fas fa-eye"></i> ({{ user.eleves|length }})
                        </a>
                    {% else %}
                        <span>{{ user.eleves|length }}</span>
                    {% endif %}
                </td>

                <td class="text-center">
                    {% if is_granted('ROLE_CLASS_LIST_ALL') %}
                        <a href="{{ path('user_view_classes', {'id': user.id} ) }}">
                            <i class="fas fa-eye"></i> ({{ user.classes|length }})
                        </a>
                    {% else %}
                        <span>{{ user.classes|length }}</span>
                    {% endif %}
                </td>

                {% if is_granted('ROLE_USER_EDIT') %}
                    <td class="text-center" data-mobile="0">
                        <a href="{{ path('user_edit', {'id': user.id}) }}">
                            <i class="fas fa-edit"></i>
                        </a>
                    </td>
                {% endif %}

                {% if is_granted('ROLE_USER_DELETE') %}
                    <td class="text-center" data-mobile="0">
                        <div data-target="user"
                             data-targetid="{{ user.id }}"
                             data-action="{{ path('user_delete', {'id': user.id}) }}"
                             data-class="fas fa-trash"
                             data-csrf="{{ csrf_token('user_delete' ~ user.id) }}"
                        >
                        </div>
                    </td>
                {% endif %}

            </tr>
        {% else %}
            <tr>
                <td class="text-center" colspan="6">{{ 'No users found' | trans }}</td>
            </tr>
            <tr>
                <td class="text-center" colspan="6">{{ 'You do not have rights to see users or no users exists in the database'|trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}


{% block functionnalities %}
    {% if is_granted('ROLE_USER_CREATE') %}
        <a href="{{ path('user_add') }}">
            <i class="fas fa-plus"></i>
        </a>
    {% endif %}
{% endblock %}


{% block functionnalitiesMobile %}
    {% if is_granted('ROLE_USER_CREATE') %}
        <a href="{{ path('user_add') }}">
            <i class="fas fa-plus"></i>
        </a>
    {% endif %}
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('modalDialogs') }}
{% endblock %}