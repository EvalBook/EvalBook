{% extends 'base.html.twig' %}

{% block title %}
    {{ 'Edit user' | trans }} <i>{{ username }}</i>
{% endblock %}

{% block body %}
    {{ form(userForm) }}
{% endblock %}

{% block javascripts %}
    <script>
        window.addEventListener('load', () => {
            let editRoles = document.getElementById('user_roles');
            let buttonBack = document.getElementById('user_back');

            editRoles.addEventListener("click", () => window.location.replace("{{ url('users_role_edit', {id:userId}) }}"));
            buttonBack.addEventListener("click", () => window.location.replace("{{ url('users_list') }}"));
        })
    </script>
{% endblock %}