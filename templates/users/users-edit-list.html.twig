{% extends 'base.html.twig' %}
{% trans_default_domain 'templates' %}

{% block title %}{{ 'users.edit' | trans }}{% endblock %}

{% block sidebar %}
    {% include '_partials/sidebar.html.twig' %}
{% endblock %}

{% block body %}
    <table class="table table-striped">
        <thead>
        <tr>
            <th scope="col">{{ 'table.id' | trans }}</th>
            <th scope="col">{{ 'table.label.first-name' | trans }}</th>
            <th scope="col">{{ 'table.label.last-name' | trans }}</th>
            <th scope="col">{{ 'table.label.email' | trans }}</th>
            <th scope="col">{{ 'table.label.roles' | trans }}</th>
            <th scope="col">{{ 'table.label.active' | trans }}</th>
            <th scope="col"></th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <th scope="row">{{ user.id }}</th>
                <td>{{ user.firstName }}</td>
                <td>{{ user.lastName }}</td>
                <td>{{ user.email }}</td>
                <td>
                    {{ user.roles | length }}
                    {% form_theme rolesForms[user.id] 'bootstrap_4_layout.html.twig' %}
                    <i style="cursor: pointer;" class="far fa-edit" data-toggle="modal" data-target="#modal-right-roles-{{ user.id }}"></i>
                    {% include 'users/user-roles-edit-form.html.twig' with {'form' : rolesForms[user.id],'id': user.id} %}
                </td>
                <td>
                    {% if user.active %}
                        {{ 'message.confirm.yes' | trans }}
                    {% else %}
                        {{ 'message.confirm.no' | trans }}
                    {% endif %}
                </td>
                <td>
                    {% form_theme editForms[user.id] 'bootstrap_4_layout.html.twig' %}
                    <i style="cursor: pointer;" class="fas fa-pen-square" data-toggle="modal" data-target="#modal-right-user-edit-{{ user.id }}"></i>
                    {% include 'users/user-edit-form.html.twig' with {'form' : editForms[user.id],'id': user.id} %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">{{ 'users.not-found' | trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}