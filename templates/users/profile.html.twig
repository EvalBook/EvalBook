{% extends 'base.html.twig' %}
{% trans_default_domain 'forms' %}

{% block pageTitle %} {{ 'user.profile' | trans }} {% endblock %}
{% block title %} {{ 'user.profile' | trans }} {% endblock %}

{% block body %}

    {% if userProfileForm is defined %}
        {{ form_start(userProfileForm) }}
        {{ form_errors(userProfileForm) }}


        {# The user mail address #}
        {{ form_label(userProfileForm.email, 'user.label.email'|trans) }}
        {{ form_widget(userProfileForm.email) }}

        {# The user password #}
        {{ form_label(userProfileForm.password.first, 'user.label.password'|trans) }}
        {{ form_widget(userProfileForm.password.first) }}

        {{ form_label(userProfileForm.password.second, 'user.label.password-repeat'|trans) }}
        {{ form_widget(userProfileForm.password.second) }}

        {# Submit button #}
        {{ form_row(userProfileForm.submit, {'label': 'common.send'|trans,
            'attr': {'class': 'margin-15'}
        }) }}

        {{ form_end(userProfileForm) }}

    {% endif %}
{% endblock %}
