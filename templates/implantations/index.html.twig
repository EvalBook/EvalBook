{% extends 'base.html.twig' %}
{% trans_default_domain 'templates' %}

{% block pageTitle %} {{ 'global.implantations' | trans }} {% endblock %}
{% block title %}{{ 'global.implantations' | trans }}{% endblock %}

{% block body %}
    <table class="full-width">
        <thead>
        <tr>
            <th scope="col">{{ 'implantations.table.name' | trans }}</th>
            <th scope="col">{{ 'implantations.table.address' | trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% for implantation in implantations %}
            <tr>
                <td>{{ implantation.name }}</td>
                <td>
                    {{ implantation.address }}, {{ implantation.zipCode }} {{ implantation.country }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">{{ 'implantations.table.not-found' | trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}